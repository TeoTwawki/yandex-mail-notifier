{
  "name": "yandex-mail-notifier-chrome",
  "version": "1.1.0",
  "author": {
    "name": "Alexander Ivantsov",
    "email": "alexivantsov@ya.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivantsov/yandex-mail-notifier-chrome.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src scripts webpack",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov",
    "test:watch": "jest --watch",
    "hot-server": "node ./webpack/hot-server.js",
    "build:dev": "npm run clean && webpack",
    "build:prod": "npm run clean && webpack --env prod",
    "zip": "zip -r -X dist/yandex-mail-notifier.zip dist",
    "deploy": "node ./scripts/deploy",
    "publish": "npm run build:prod && npm run zip && npm run deploy",
    "release": "node ./scripts/release"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "object-path": "^0.11.3",
    "query-string": "^4.2.3",
    "raven-js": "^3.9.1",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-subscriber": "^1.1.0",
    "redux-thunk": "^2.1.0",
    "redux-webext": "^1.1.1",
    "superagent": "^3.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-react": "^6.16.0",
    "codecov": "^1.0.1",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.8.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "fs-extra": "^1.0.0",
    "html-webpack-plugin": "^2.24.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.0.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-test-renderer": "^15.4.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webext-i18n": "^1.1.0",
    "webpack": "beta",
    "webpack-dev-server": "^2.1.0-beta.9",
    "webpack-shell-plugin": "^0.5.0",
    "write-file-webpack-plugin": "^3.4.1"
  },
  "jest": {
    "rootDir": "./src",
    "resetMocks": true,
    "resetModules": true,
    "moduleDirectories": [
      "node_modules",
      "src/pages"
    ],
    "moduleNameMapper": {
      "\\.(less)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "fixtures.js"
    ]
  }
}
